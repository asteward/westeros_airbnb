<%= form_for [@user, @lodging], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :cost %>
    <%= f.number_field :cost %>
  </div>

  <div class="form-group">
    <%= f.label :marketing_text %>
    <%= f.text_area :marketing_text, :rows => 20, :cols => 60 %>
  </div>

  <%= f.submit %>
<% end %>


