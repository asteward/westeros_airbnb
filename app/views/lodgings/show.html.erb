<div class="form-background">
  <h1><%= @lodging.name %> at <%= @lodging.location %></h1>

  <h2>Description</h2>

  <h3>Price: <%= @lodging.cost %></h3>
  <p><blockquote><%= @lodging.marketing_text %></blockquote></p>

  <div id="bookings-form">
    <% if current_user %>
      <p><%= link_to "BOOK A ROOM", new_lodging_booking_path(@lodging), remote: true, class: "btn btn-success" %></p>
    <% else %>
      <p><%= link_to "LOG IN TO BOOK A ROOM", new_user_session_path, class: "btn btn-success" %></p>
    <% end %>
  </div>
</div>


